{
  "manifest_version": 3,
  "name": "Documind - AI PDF Viewer",
  "version": "1.0.0",
  "description": "AI-powered PDF viewer for efficient learning and studying",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "file:///*",
    "https://*.chunkr.ai/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["file:///*.pdf", "file://*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["viewer.html", "pdf.worker.mjs", "pdf.js"],
      "matches": ["file:///*", "<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "settings.html"
}
