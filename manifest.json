{
  "name": "documind",
  "description": "AI-powered PDF viewer for efficient learning + studying",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "unlimitedStorage",
    "webNavigation",
    "tabs",
    "offscreen",
    "alarms"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "documind - Advanced PDF Reader"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*"
      ],
      "matches": ["*://*/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
  ,
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
